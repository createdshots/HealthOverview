{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/js/auth.js",
        "function": "authScript"
      },
      {
        "source": "/js/login.js",
        "function": "loginScript"
      },
      {
        "source": "/dashboard.html",
        "destination": "/dashboard.html"
      },
      {
        "source": "/profile.html", 
        "destination": "/profile.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
}
